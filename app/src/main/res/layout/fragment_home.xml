<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group"
    android:orientation="vertical"
    tools:context=".fragments.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_textUzmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UZMOBILE"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/tv_Milliy_oprator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MILLIY OPERATOR"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_Flipper"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp">

            <ViewFlipper

                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center_horizontal"
                android:autoStart="true"
                android:flipInterval="2500"
                android:inAnimation="@anim/flip_in_animation"
                android:outAnimation="@anim/flip_out_animation">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/austria" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/california" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/indonesia" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mexico" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thailand" />

            </ViewFlipper>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:id="@+id/indicatorContainerFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:weightSum="2">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_ussd"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/hash" />

                    <ImageView
                        android:id="@+id/img_tarif"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/credit_card" />

                    <ImageView
                        android:id="@+id/img_xizmat"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/sliders" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_minut"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/phone" />

                    <ImageView
                        android:id="@+id/img_internet"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/earth" />

                    <ImageView
                        android:id="@+id/img_sms"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/ellipse"
                        android:padding="4dp"
                        android:src="@drawable/message_square" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

